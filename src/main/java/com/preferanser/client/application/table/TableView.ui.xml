<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.preferanser.client.application.widgets'>
    <ui:style src="table.css" field="style" type="com.preferanser.client.application.table.TableView.Style"/>
    <ui:with field="resources" type="com.preferanser.client.application.PreferanserResources"/>
    <g:VerticalPanel addStyleNames="{style.verticalPanel}" spacing="0">
        <g:FlowPanel addStyleNames="{style.not-displayed}">
            <p:CardWidget card="CLUB_SEVEN"/>
            <p:CardWidget card="SPADE_SEVEN"/>
            <p:CardWidget card="DIAMOND_SEVEN"/>
            <p:CardWidget card="HEART_SEVEN"/>
            <p:CardWidget card="CLUB_EIGHT"/>
            <p:CardWidget card="SPADE_EIGHT"/>
            <p:CardWidget card="DIAMOND_EIGHT"/>
            <p:CardWidget card="HEART_EIGHT"/>
            <p:CardWidget card="CLUB_NINE"/>
            <p:CardWidget card="SPADE_NINE"/>
            <p:CardWidget card="DIAMOND_NINE"/>
            <p:CardWidget card="HEART_NINE"/>
            <p:CardWidget card="CLUB_TEN"/>
            <p:CardWidget card="SPADE_TEN"/>
            <p:CardWidget card="DIAMOND_TEN"/>
            <p:CardWidget card="HEART_TEN"/>
            <p:CardWidget card="CLUB_JACK"/>
            <p:CardWidget card="SPADE_JACK"/>
            <p:CardWidget card="DIAMOND_JACK"/>
            <p:CardWidget card="HEART_JACK"/>
            <p:CardWidget card="CLUB_QUEEN"/>
            <p:CardWidget card="SPADE_QUEEN"/>
            <p:CardWidget card="DIAMOND_QUEEN"/>
            <p:CardWidget card="HEART_QUEEN"/>
            <p:CardWidget card="CLUB_KING"/>
            <p:CardWidget card="SPADE_KING"/>
            <p:CardWidget card="DIAMOND_KING"/>
            <p:CardWidget card="HEART_KING"/>
            <p:CardWidget card="CLUB_ACE"/>
            <p:CardWidget card="SPADE_ACE"/>
            <p:CardWidget card="DIAMOND_ACE"/>
            <p:CardWidget card="HEART_ACE"/>
        </g:FlowPanel>
        <g:HorizontalPanel addStyleNames="{style.buttonsPanel}">
            <g:Button ui:field="dealButton" text="Deal"/>
        </g:HorizontalPanel>
        <g:DockPanel debugId="dlp" addStyleNames="{style.dockPanel}" spacing="10">
            <g:Dock direction="NORTH" addStyleNames="{style.northDock}">
                <g:VerticalPanel addStyleNames="{style.northVPanel}">
                    <g:FlowPanel ui:field="northPanel" addStyleNames="{style.northFlowPanel}"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.northHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleNorth" addStyleNames="{style.titleNorth}">
                                <ui:msg>Север</ui:msg>
                            </g:Label>
                            <g:Hyperlink ui:field="northContractLink">
                                <ui:msg>выбрать контракт</ui:msg>
                            </g:Hyperlink>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountNorth" addStyleNames="{style.trickCountNorth}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="SOUTH" addStyleNames="{style.southDock}">
                <g:VerticalPanel addStyleNames="{style.southVPanel}">
                    <g:FlowPanel ui:field="southPanel" addStyleNames="{style.southFlowPanel}"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.southHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleSouth" addStyleNames="{style.titleSouth}">
                                <ui:msg>Юг</ui:msg>
                            </g:Label>
                            <g:Hyperlink ui:field="southContractLink">
                                <ui:msg>выбрать контракт</ui:msg>
                            </g:Hyperlink>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountSouth" addStyleNames="{style.trickCountSouth}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="EAST" addStyleNames="{style.eastDock}">
                <g:VerticalPanel addStyleNames="{style.eastVPanel}">
                    <g:FlowPanel ui:field="eastPanel" addStyleNames="{style.eastFlowPanel}"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.eastHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleEast" addStyleNames="{style.titleEast}">
                                <ui:msg>Восток</ui:msg>
                            </g:Label>
                            <g:Hyperlink ui:field="eastContractLink">
                                <ui:msg>выбрать контракт</ui:msg>
                            </g:Hyperlink>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountEast" addStyleNames="{style.trickCountEast}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="WEST" addStyleNames="{style.westDock}">
                <g:VerticalPanel addStyleNames="{style.westVPanel}">
                    <g:FlowPanel ui:field="westPanel" addStyleNames="{style.westFlowPanel}"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.westHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleWest" addStyleNames="{style.titleWest}">
                                <ui:msg>Запад</ui:msg>
                            </g:Label>
                            <g:Hyperlink ui:field="westContractLink">
                                <ui:msg>выбрать контракт</ui:msg>
                            </g:Hyperlink>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountWest" addStyleNames="{style.trickCountWest}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="CENTER" addStyleNames="{style.centerDock}">
                <g:VerticalPanel addStyleNames="{style.centerVPanel}">
                    <g:FlowPanel ui:field="centerPanel" addStyleNames="{style.centerFlowPanel}"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.centerHPanel}">
                        <g:Hyperlink ui:field="sluffLink">В отбой</g:Hyperlink>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
        </g:DockPanel>
    </g:VerticalPanel>
</ui:UiBinder>
