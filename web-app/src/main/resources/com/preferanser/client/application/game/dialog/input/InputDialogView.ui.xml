<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets">
    <ui:style>
        .dialog {
            color: white;
            text-shadow: 1px 1px 1px black;
        }
    </ui:style>
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <p:EscapableDialogBox ui:field="dialog" debugId="input-dialog" modal="true" glassEnabled="true"
                          autoHideEnabled="true" glassStyleName="gwt-DialogBoxOverlay"
                          addStyleNames="{style.dialog}">
        <g:VerticalPanel width="100%" height="100%" spacing="10">
            <g:Label ui:field="descriptionLabel" />
            <g:TextBox ui:field="textBox" />
            <g:Button ui:field="button" text="{constants.enter}" />
        </g:VerticalPanel>
    </p:EscapableDialogBox>

</ui:UiBinder>
