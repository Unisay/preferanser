<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:style src="../table.css" field="style" type="com.preferanser.client.application.game.editor.style.TableStyle"/>

    <p:TablePanel ui:field="table">

        <p:header>
            <g:HorizontalPanel> <!-- todo replace by holder widget -->
                <g:Button ui:field="playButton" text="{constants.play}" debugId="play"/>
                <g:Button ui:field="saveButton" text="{constants.save}" debugId="save"/>
                <g:Button ui:field="dealButton" text="{constants.deal}" debugId="deal"/>
            </g:HorizontalPanel>
        </p:header>

        <p:northheader>
            <g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                    <g:Label ui:field="titleNorth" text="{constants.north}" addStyleNames="{style.titleNorth}"/>
                    <p:ContractLink ui:field="northContractLink" constants="{constants}" tableStyle="{style}"
                                    debugId="contract-link-NORTH"/>
                </g:FlowPanel>
                <g:Label ui:field="trickCountNorth" addStyleNames="{style.trickCountNorth}"/>
            </g:FlowPanel>
        </p:northheader>

        <p:westheader>
            <g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                    <g:Label ui:field="titleWest" text="{constants.west}" addStyleNames="{style.titleWest}"/>
                    <p:ContractLink ui:field="westContractLink" constants="{constants}" tableStyle="{style}"
                                    debugId="contract-link-WEST"/>
                </g:FlowPanel>
                <g:Label ui:field="trickCountWest" addStyleNames="{style.trickCountWest}"/>
            </g:FlowPanel>
        </p:westheader>

        <p:southheader>
            <g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                    <g:Label ui:field="titleSouth" text="{constants.south}" addStyleNames="{style.titleSouth}"/>
                    <p:ContractLink ui:field="southContractLink" constants="{constants}" tableStyle="{style}"
                                    debugId="contract-link-SOUTH"/>
                </g:FlowPanel>
                <g:Label ui:field="trickCountSouth" addStyleNames="{style.trickCountSouth}"/>
            </g:FlowPanel>
        </p:southheader>

        <p:eastheader>
            <g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                    <g:Label ui:field="titleEast" text="{constants.east}" addStyleNames="{style.titleEast}"/>
                    <p:ContractLink ui:field="eastContractLink" constants="{constants}" tableStyle="{style}"
                                    debugId="contract-link-EAST"/>
                </g:FlowPanel>
                <g:Label ui:field="trickCountEast" addStyleNames="{style.trickCountEast}"/>
            </g:FlowPanel>
        </p:eastheader>

        <p:centerheader>
            <g:FlowPanel>
                <g:Hyperlink ui:field="sluffLink" text="{constants.toSluff}" addStyleNames="{style.contractLink}"/>
            </g:FlowPanel>
        </p:centerheader>

    </p:TablePanel>

</ui:UiBinder>
