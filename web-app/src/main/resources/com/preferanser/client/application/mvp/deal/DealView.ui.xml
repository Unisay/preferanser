<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:with field="resources" type="com.preferanser.laf.client.PreferanserResources"/>

    <ui:style>
        @import url(http://fonts.googleapis.com/css?family=Lobster&amp;subset=cyrillic);

        .title {
            margin: 1em 0 .5em 0;
            font-size: 36pt;
            font-family: 'Lobster', cursive;
        }

        .description, .createDealDescription, .chooseDeal {
            margin-bottom: 1em;
            font-size: 12pt;
        }

        .createDealDescription {
            display: inline;
            margin-right: 1em;
        }

        .chooseDeal {
            display: inline;
            margin-left: 1em;
        }

        .deals {
            width: 100%;
            margin-top: 2em;
            background-color: rgba(0, 0, 0, .1);
            border-radius: 7px;
        }

    </ui:style>

    <g:FlowPanel addStyleNames="{resources.css.layoutCenter}">
        <g:Label text="{constants.preferanser}" addStyleNames="{style.title}"/>
        <g:Label text="{constants.description}" addStyleNames="{style.description}"/>
        <g:Label text="{constants.createDealDescription}" addStyleNames="{style.createDealDescription}"/>
        <g:Button text="{constants.createNewDeal}"/>
        <g:Label text="{constants.chooseDeal}" addStyleNames="{style.chooseDeal}"/>

        <g:Grid ui:field="dealGrid" cellSpacing="10" addStyleNames="{style.deals}"/>

    </g:FlowPanel>

</ui:UiBinder>
