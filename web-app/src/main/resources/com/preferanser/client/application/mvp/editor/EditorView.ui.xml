<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:with field="resources" type="com.preferanser.laf.client.PreferanserResources"/>
    <ui:style src="../table.css" type="com.preferanser.client.application.mvp.editor.style.TableStyle"/>

    <ui:style field="editorStyle">
        .propertiesPanel {
            width: 100%;
            padding: 1em;
        }

        .formInput {
            margin-bottom: 1em;
        }

        @external .gwt-Label;
        .formInput .gwt-Label {
            margin-bottom: .5em;
            font-weight: 400;
        }

        .formInput input, .formInput textarea {
            width: 500px;
            border: none;
            border-radius: 5px;
            background-color: rgba(0, 0, 0, .1);
            color: white;
            font-size: 14pt;
            resize: none;
        }

        .formInput input {
            padding: 5px 10px;
        }

        .formInput textarea {
            padding: 10px;
            height: 265px;
        }

    </ui:style>
    <g:FlowPanel addStyleNames="{resources.css.layoutCenter}">

        <g:FlowPanel height="60">
            <g:Button ui:field="saveButton" text="{constants.save}" debugId="save"/>
            <g:Button ui:field="cancelButton" text="{constants.cancel}" debugId="cancel"/>
            <g:Button ui:field="resetButton" text="{constants.reset}" debugId="reset"/>
        </g:FlowPanel>

        <p:TablePanel ui:field="table">

            <p:westheader>
                <p:Widgets>
                    <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                        <g:Label ui:field="titleWest" text="{constants.WEST}" addStyleNames="{style.titleWest}"/>
                        <g:Anchor ui:field="westContractAnchor" debugId="contract-link-WEST"
                                  addStyleNames="{style.contractLink}"/>
                    </g:FlowPanel>
                    <g:Label ui:field="trickCountWest" addStyleNames="{style.trickCountWest}"/>
                </p:Widgets>
            </p:westheader>

            <p:southheader>
                <p:Widgets>
                    <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                        <g:Label ui:field="titleSouth" text="{constants.SOUTH}" addStyleNames="{style.titleSouth}"/>
                        <g:Anchor ui:field="southContractAnchor" debugId="contract-link-SOUTH"
                                  addStyleNames="{style.contractLink}"/>
                    </g:FlowPanel>
                    <g:Label ui:field="trickCountSouth" addStyleNames="{style.trickCountSouth}"/>
                </p:Widgets>
            </p:southheader>

            <p:eastheader>
                <p:Widgets>
                    <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                        <g:Label ui:field="titleEast" text="{constants.EAST}" addStyleNames="{style.titleEast}"/>
                        <g:Anchor ui:field="eastContractAnchor" debugId="contract-link-EAST"
                                  addStyleNames="{style.contractLink}"/>
                    </g:FlowPanel>
                    <g:Label ui:field="trickCountEast" addStyleNames="{style.trickCountEast}"/>
                </p:Widgets>
            </p:eastheader>

            <p:center>
                <p:Widgets>
                    <g:FlowPanel debugId="turn-pointer-holder" addStyleNames="{style.relativeElementsHolder}">
                        <p:TurnPointer ui:field="turnPointerEast" turn="EAST"/>
                        <p:TurnPointer ui:field="turnPointerSouth" turn="SOUTH"/>
                        <p:TurnPointer ui:field="turnPointerWest" turn="WEST"/>
                    </g:FlowPanel>
                </p:Widgets>
            </p:center>

            <p:tab title="{constants.properties}" index="0">
                <g:FlowPanel addStyleNames="{editorStyle.propertiesPanel}">
                    <g:FlowPanel width="100%" addStyleNames="{editorStyle.formInput}">
                        <g:Label text="{constants.dealName}"/>
                        <g:TextBox ui:field="dealName"/>
                    </g:FlowPanel>
                    <g:FlowPanel width="100%" addStyleNames="{editorStyle.formInput}">
                        <g:Label text="{constants.dealDescription}"/>
                        <g:TextArea ui:field="dealDescription"/>
                    </g:FlowPanel>
                </g:FlowPanel>
            </p:tab>

        </p:TablePanel>

    </g:FlowPanel>

</ui:UiBinder>
