<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:style src="../table.css" type="com.preferanser.client.application.mvp.editor.style.TableStyle"/>

    <g:VerticalPanel addStyleNames="{style.verticalPanel}" spacing="0">

        <g:HorizontalPanel height="60" spacing="10" width="100%" verticalAlignment="ALIGN_MIDDLE">

            <g:FlowPanel addStyleNames="{style.leftHeader}">
                <g:Button ui:field="playButton" text="{constants.play}" debugId="play"/>
                <p:RequestButton ui:field="saveButton" text="{constants.save}" debugId="save"/>
                <p:RequestButton ui:field="openButton" text="{constants.open}" debugId="open"/>
                <g:Button ui:field="dealButton" text="{constants.deal}" debugId="deal"/>
            </g:FlowPanel>

            <g:FlowPanel addStyleNames="{style.rightHeader}">
                <g:InlineHTML ui:field="authLabel" addStyleNames="{style.authLabel}"/>
                <g:HTML addStyleNames="{style.pipe}">|</g:HTML>
                <g:Hyperlink ui:field="logout" text="{constants.logout}" addStyleNames="{style.logout}"/>
            </g:FlowPanel>

        </g:HorizontalPanel>

        <p:TablePanel ui:field="table">

            <p:westheader>
                <p:Widgets>
                    <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                        <g:Label ui:field="titleWest" text="{constants.WEST}" addStyleNames="{style.titleWest}"/>
                        <g:Anchor ui:field="westContractAnchor" debugId="contract-link-WEST"
                                  addStyleNames="{style.contractLink}"/>
                    </g:FlowPanel>
                    <g:Label ui:field="trickCountWest" addStyleNames="{style.trickCountWest}"/>
                </p:Widgets>
            </p:westheader>

            <p:southheader>
                <p:Widgets>
                    <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                        <g:Label ui:field="titleSouth" text="{constants.SOUTH}" addStyleNames="{style.titleSouth}"/>
                        <g:Anchor ui:field="southContractAnchor" debugId="contract-link-SOUTH"
                                  addStyleNames="{style.contractLink}"/>
                    </g:FlowPanel>
                    <g:Label ui:field="trickCountSouth" addStyleNames="{style.trickCountSouth}"/>
                </p:Widgets>
            </p:southheader>

            <p:eastheader>
                <p:Widgets>
                    <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                        <g:Label ui:field="titleEast" text="{constants.EAST}" addStyleNames="{style.titleEast}"/>
                        <g:Anchor ui:field="eastContractAnchor" debugId="contract-link-EAST"
                                  addStyleNames="{style.contractLink}"/>
                    </g:FlowPanel>
                    <g:Label ui:field="trickCountEast" addStyleNames="{style.trickCountEast}"/>
                </p:Widgets>
            </p:eastheader>

            <p:center>
                <p:Widgets>
                    <p:TurnPointer ui:field="turnPointerEast" turn="EAST"/>
                    <p:TurnPointer ui:field="turnPointerSouth" turn="SOUTH"/>
                    <p:TurnPointer ui:field="turnPointerWest" turn="WEST"/>
                </p:Widgets>
            </p:center>

        </p:TablePanel>

    </g:VerticalPanel>

</ui:UiBinder>
