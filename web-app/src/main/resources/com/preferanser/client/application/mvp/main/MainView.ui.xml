<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:with field="resources" type="com.preferanser.laf.client.PreferanserResources"/>

    <ui:style>

        .description {
            margin-bottom: 1em;
            font-size: 12pt;
        }

        .inline {
            display: inline-block;
        }

        .editorButton {
            margin: 0 1em;
        }

    </ui:style>

    <g:FlowPanel addStyleNames="{resources.css.layoutCenter}">
        <g:Label text="{constants.preferanser}" addStyleNames="{resources.css.title}"/>
        <g:Label text="{constants.description}" addStyleNames="{style.description}"/>
        <g:Label text="{constants.createDealDescription}" addStyleNames="{style.description} {style.inline}"/>
        <g:Button ui:field="editorButton" text="{constants.editor}" addStyleNames="{style.editorButton}"/>
        <g:Label text="{constants.dealsDescription}" addStyleNames="{style.description} {style.inline}"/>
        <g:SimplePanel ui:field="main"/>
    </g:FlowPanel>

</ui:UiBinder>
