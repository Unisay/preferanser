<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>

    <ui:style src="../table.css" field="tableStyle" type="com.preferanser.client.application.mvp.editor.style.TableStyle"/>
    <ui:style>
        .dashSeparator {
            margin: 0 .5em;
        }
    </ui:style>
    <p:TablePanel ui:field="table">

        <p:header>
            <p:Widgets>
                <g:Button ui:field="editButton" text="{constants.edit}" debugId="edit"/>
            </p:Widgets>
        </p:header>

        <p:northheader>
            <p:Widgets>
                <g:Label ui:field="titleNorth" text="{constants.north}" addStyleNames="{tableStyle.titleNorth}"/>
                <g:Label ui:field="trickCountNorth" addStyleNames="{tableStyle.trickCountNorth}"/>
            </p:Widgets>
        </p:northheader>

        <p:westheader>
            <p:Widgets>
                <g:Label ui:field="titleWest" text="{constants.west}" addStyleNames="{tableStyle.titleWest}"/>
                <g:Label ui:field="trickCountWest" addStyleNames="{tableStyle.trickCountWest}"/>
            </p:Widgets>
        </p:westheader>

        <p:southheader>
            <p:Widgets>
                <g:Label ui:field="titleSouth" text="{constants.south}" addStyleNames="{tableStyle.titleSouth}"/>
                <g:Label ui:field="trickCountSouth" addStyleNames="{tableStyle.trickCountSouth}"/>
            </p:Widgets>
        </p:southheader>

        <p:eastheader>
            <p:Widgets>
                <g:Label ui:field="titleEast" text="{constants.east}" addStyleNames="{tableStyle.titleEast}"/>
                <g:Label ui:field="trickCountEast" addStyleNames="{tableStyle.trickCountEast}"/>
            </p:Widgets>
        </p:eastheader>

        <p:center>
            <p:Widgets>
                <p:TurnPointer ui:field="turnPointerNorth" turn="NORTH"/>
                <p:TurnPointer ui:field="turnPointerEast" turn="EAST"/>
                <p:TurnPointer ui:field="turnPointerSouth" turn="SOUTH"/>
                <p:TurnPointer ui:field="turnPointerWest" turn="WEST"/>
            </p:Widgets>
        </p:center>

    </p:TablePanel>

</ui:UiBinder>
