<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:style src="../table.css" type="com.preferanser.client.application.mvp.editor.style.TableStyle"/>
    <ui:with field="resources" type="com.preferanser.laf.client.PreferanserResources"/>

    <g:FlowPanel addStyleNames="{resources.css.layoutCenter}">

        <g:FlowPanel debugId="buttons-panel" addStyleNames="{style.buttonsPanel}">
            <g:Button ui:field="closeButton" text="{constants.close}" debugId="close"/>
            <g:Button ui:field="editButton" text="{constants.edit}" debugId="edit"/>
            <g:Button ui:field="resetButton" text="{constants.reset}" debugId="reset"/>
            <g:Label debugId="deal-name" ui:field="dealName" addStyleNames="{style.dealName}"/>
        </g:FlowPanel>

        <p:TablePanel ui:field="table">

            <p:westheader>
                <p:Widgets>
                    <g:Label ui:field="titleWest" text="{constants.WEST}" addStyleNames="{style.titleWest}"/>
                    <g:Label ui:field="trickCountWest" addStyleNames="{style.trickCountWest}"/>
                </p:Widgets>
            </p:westheader>

            <p:southheader>
                <p:Widgets>
                    <g:Label ui:field="titleSouth" text="{constants.SOUTH}" addStyleNames="{style.titleSouth}"/>
                    <g:Label ui:field="trickCountSouth" addStyleNames="{style.trickCountSouth}"/>
                </p:Widgets>
            </p:southheader>

            <p:eastheader>
                <p:Widgets>
                    <g:Label ui:field="titleEast" text="{constants.EAST}" addStyleNames="{style.titleEast}"/>
                    <g:Label ui:field="trickCountEast" addStyleNames="{style.trickCountEast}"/>
                </p:Widgets>
            </p:eastheader>

            <p:center>
                <p:Widgets>
                    <g:FlowPanel debugId="relative-elements-holder" addStyleNames="{style.relativeElementsHolder}">
                        <g:Button ui:field="turnWidowButton" text="{constants.turnWidow}" debugId="widow" addStyleNames="{style.turnWidowButton}"/>
                        <g:Button ui:field="sluffButton" text="{constants.sluff}" debugId="sluff" addStyleNames="{style.sluffButton}"/>
                        <p:TurnPointer ui:field="turnPointerWidow" turn="WIDOW"/>
                        <p:TurnPointer ui:field="turnPointerEast" turn="EAST"/>
                        <p:TurnPointer ui:field="turnPointerSouth" turn="SOUTH"/>
                        <p:TurnPointer ui:field="turnPointerWest" turn="WEST"/>
                        <g:Anchor ui:field="undoAnchor" title="{constants.undo}" debugId="undo" addStyleNames="{style.undoLink} fa fa-arrow-left"/>
                        <g:Anchor ui:field="redoAnchor" title="{constants.redo}" debugId="redo" addStyleNames="{style.redoLink} fa fa-arrow-right"/>
                    </g:FlowPanel>
                </p:Widgets>
            </p:center>

            <p:tab title="{constants.dealDescription}" index="0">
                <g:SimplePanel addStyleNames="{style.dealDescription}">
                    <g:InlineLabel ui:field="dealDescription"/>
                </g:SimplePanel>
            </p:tab>

        </p:TablePanel>

    </g:FlowPanel>

</ui:UiBinder>
