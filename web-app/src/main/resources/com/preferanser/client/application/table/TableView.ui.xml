<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:style src="style/table.css" field="style" type="com.preferanser.client.application.table.style.TableStyle"/>
    <g:VerticalPanel addStyleNames="{style.verticalPanel}" spacing="0">
        <g:HorizontalPanel addStyleNames="{style.buttonsPanel}" spacing="10">
            <g:HorizontalPanel spacing="0">
                <g:ToggleButton ui:field="playButton" addStyleNames="{style.play}"/>
                <g:ToggleButton ui:field="editButton" addStyleNames="{style.edit}"/>
            </g:HorizontalPanel>
            <g:Button ui:field="resetButton" text="Deal">
                <ui:attribute name="text" key="deal" description="Deal button caption"/>
            </g:Button>
            <g:Button ui:field="saveButton" text="Save">
                <ui:attribute name="text" key="save" description="Save button caption"/>
            </g:Button>
        </g:HorizontalPanel>
        <g:DockPanel debugId="dlp" addStyleNames="{style.dockPanel}" spacing="10">
            <g:Dock direction="NORTH" addStyleNames="{style.northDock}">
                <g:VerticalPanel addStyleNames="{style.northVPanel}">
                    <g:FlowPanel ui:field="northPanel" addStyleNames="{style.northFlowPanel}" debugId="NORTH"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.northHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleNorth" addStyleNames="{style.titleNorth}">
                                <ui:msg key="north" description="north">Север</ui:msg>
                            </g:Label>
                            <p:ContractLink ui:field="northContractLink" constants="{constants}" tableStyle="{style}"/>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountNorth" addStyleNames="{style.trickCountNorth}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="SOUTH" addStyleNames="{style.southDock}">
                <g:VerticalPanel addStyleNames="{style.southVPanel}">
                    <g:FlowPanel ui:field="southPanel" addStyleNames="{style.southFlowPanel}" debugId="SOUTH"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.southHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleSouth" addStyleNames="{style.titleSouth}">
                                <ui:msg key="south" description="south">Юг</ui:msg>
                            </g:Label>
                            <p:ContractLink ui:field="southContractLink" constants="{constants}" tableStyle="{style}"/>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountSouth" addStyleNames="{style.trickCountSouth}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="EAST" addStyleNames="{style.eastDock}">
                <g:VerticalPanel addStyleNames="{style.eastVPanel}">
                    <g:FlowPanel ui:field="eastPanel" addStyleNames="{style.eastFlowPanel}" debugId="EAST"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.eastHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleEast" addStyleNames="{style.titleEast}">
                                <ui:msg key="east" description="east">Восток</ui:msg>
                            </g:Label>
                            <p:ContractLink ui:field="eastContractLink" constants="{constants}" tableStyle="{style}"/>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountEast" addStyleNames="{style.trickCountEast}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="WEST" addStyleNames="{style.westDock}">
                <g:VerticalPanel addStyleNames="{style.westVPanel}">
                    <g:FlowPanel ui:field="westPanel" addStyleNames="{style.westFlowPanel}" debugId="WEST"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.westHPanel}">
                        <g:FlowPanel addStyleNames="{style.handHeaderLeftPanel}">
                            <g:Label ui:field="titleWest" addStyleNames="{style.titleWest}">
                                <ui:msg key="west" description="west">Запад</ui:msg>
                            </g:Label>
                            <p:ContractLink ui:field="westContractLink" constants="{constants}" tableStyle="{style}"/>
                        </g:FlowPanel>
                        <g:Label ui:field="trickCountWest" addStyleNames="{style.trickCountWest}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="CENTER" addStyleNames="{style.centerDock}">
                <g:VerticalPanel addStyleNames="{style.centerVPanel}">
                    <g:FlowPanel ui:field="centerPanel" addStyleNames="{style.centerFlowPanel}" debugId="CENTER"/>
                    <g:HorizontalPanel addStyleNames="{style.handTitle} {style.centerHPanel}">
                        <g:Hyperlink ui:field="sluffLink" addStyleNames="{style.contractLink}">
                            <ui:msg key="toSluff" description="Move to sluff">В отбой</ui:msg>
                        </g:Hyperlink>
                    </g:HorizontalPanel>
                    <p:TurnPointer ui:field="turnPointerNorth" turn="NORTH"/>
                    <p:TurnPointer ui:field="turnPointerEast" turn="EAST"/>
                    <p:TurnPointer ui:field="turnPointerSouth" turn="SOUTH"/>
                    <p:TurnPointer ui:field="turnPointerWest" turn="WEST"/>
                </g:VerticalPanel>
            </g:Dock>
        </g:DockPanel>
    </g:VerticalPanel>
</ui:UiBinder>
