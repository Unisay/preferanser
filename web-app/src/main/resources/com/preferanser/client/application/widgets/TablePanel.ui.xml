<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:style>

        @def gap 10px;

        .table {
            margin-top: gap;
        }

        .west {
            float: left;
            margin-right: gap;
        }

        .center {
            float: left;
            background-color: rgba(0, 0, 0, 0.1);
            border-radius: 7px;
            width: 550px;
            height: 440px;
            margin: 0;
        }

        .east {
            float: right;
            margin-left: gap;
        }

        .south {
            clear: both;
            margin-top: gap;
            display: inline-block;
        }

        .west, .east {
            width: 297px;
        }

        .west, .east, {
            height: 440px;
        }

        .south {
            width: 1164px;
            height: 184px;
        }

        .southHPanel, .eastHPanel, .westHPanel {
            width: 100%;
            line-height: 20px;
            padding: 0 10px 0 10px;
            -webkit-border-top-left-radius: 7px;
            -webkit-border-top-right-radius: 7px;
            -moz-border-radius-topleft: 7px;
            -moz-border-radius-topright: 7px;
            border-top-left-radius: 7px;
            border-top-right-radius: 7px;
            background-color: rgba(0, 0, 0, 0.2);
            height: 20px;
            font-weight: bold;
            cursor: pointer;
            white-space: nowrap;
        }

        .eastCards, .southCards, .westCards {
            position: relative;
            background-color: rgba(0, 0, 0, 0.1);
            -webkit-border-bottom-left-radius: 7px;
            -webkit-border-bottom-right-radius: 7px;
            -moz-border-radius-bottomleft: 7px;
            -moz-border-radius-bottomright: 7px;
            border-bottom-left-radius: 7px;
            border-bottom-right-radius: 7px;
        }

        .eastCards, .westCards {
            height: 420px;
            width: 100%;
        }

        .southCards {
            height: 164px;
            width: 100%;
        }

        .handTitle {
            font-size: small;
            text-shadow: 1px 1px 1px #222;
        }

        .fullSize {
            width: 100%;
            height: 100%;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.table} {style.fullSize}">

        <g:FlowPanel debugId="west" addStyleNames="{style.west}">
            <g:HorizontalPanel ui:field="westPanelHeader" addStyleNames="{style.handTitle} {style.westHPanel}" debugId="west-title"/>
            <g:FlowPanel ui:field="westCardsPanel" addStyleNames="{style.westCards}" debugId="west-cards"/>
        </g:FlowPanel>

        <g:SimpleLayoutPanel addStyleNames="{style.center}">
            <g:TabPanel ui:field="centerTabPanel" width="100%" height="100%" debugId="center">
                <g:Tab text="{constants.game}">
                    <g:FlowPanel ui:field="centerCardsPanel" debugId="centerCardsPanel" addStyleNames="{style.fullSize}"/>
                </g:Tab>
                <g:Tab text="{constants.widow}">
                    <g:FlowPanel ui:field="widowPanel" addStyleNames="{style.fullSize}"/>
                </g:Tab>
            </g:TabPanel>
        </g:SimpleLayoutPanel>

        <g:FlowPanel debugId="east" addStyleNames="{style.east}">
            <g:HorizontalPanel ui:field="eastPanelHeader" addStyleNames="{style.handTitle} {style.eastHPanel}" debugId="east-title"/>
            <g:FlowPanel ui:field="eastCardsPanel" addStyleNames="{style.eastCards}" debugId="east-cards"/>
        </g:FlowPanel>

        <g:FlowPanel debugId="south" addStyleNames="{style.south}">
            <g:HorizontalPanel ui:field="southPanelHeader" addStyleNames="{style.handTitle} {style.southHPanel}" debugId="south-title"/>
            <g:FlowPanel ui:field="southCardsPanel" addStyleNames="{style.southCards}" debugId="south-cards"/>
        </g:FlowPanel>

    </g:FlowPanel>

</ui:UiBinder>
