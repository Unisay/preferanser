<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:style>

        .verticalPanel {
            width: 1164px;
            margin: 0 auto;
        }

        .buttonsPanel {
            height: 60px;
        }

        .dockPanel {
            width: 100%;
            height: 100%;
        }

        .eastDock, .southDock, .westDock, .centerDock {
            position: relative;
        }

        .eastVPanel, .southVPanel, .westVPanel {
            position: relative;
            width: 100%;
        }

        .southHPanel, .eastHPanel, .westHPanel {
            width: 100%;
            line-height: 20px;
            padding: 0 10px 0 10px;
            position: absolute;
            top: 0;
            left: 0;
            -webkit-border-top-left-radius: 7px;
            -webkit-border-top-right-radius: 7px;
            -moz-border-radius-topleft: 7px;
            -moz-border-radius-topright: 7px;
            border-top-left-radius: 7px;
            border-top-right-radius: 7px;
            background-color: rgba(0, 0, 0, 0.1);
            height: 20px;
            font-weight: bold;
            cursor: pointer;
            white-space: nowrap;
        }

        .eastFlowPanel, .southFlowPanel, .westFlowPanel {
            width: 100%;
            position: relative;
            background-color: rgba(0, 0, 0, 0.1);
            border-radius: 7px;
        }

        .centerFlowPanel {
            width: 550px;
        }

        .southDock {
            width: 1164px;
        }

        .eastDock, .westDock {
            width: 297px;
        }

        .southFlowPanel {
            height: 184px;
        }

        .eastFlowPanel, .westFlowPanel {
            height: 440px;
        }

        .eastVPanel, .westVPanel {
            width: 297px;
        }

        .handTitle {
            font-size: small;
            text-shadow: 1px 1px 1px #222;
        }

        .centerTabPanel {
            width: 100%;
            position: relative;
            background-color: rgba(0, 0, 0, 0.1);
            border-radius: 7px;
        }

        .centerCardsPanel, .widowPanel {
            width: 100%;
            height: 100%;
        }
    </ui:style>
    <g:VerticalPanel addStyleNames="{style.verticalPanel}" spacing="0">
        <g:HorizontalPanel ui:field="headerPanel" addStyleNames="{style.buttonsPanel}" spacing="10"/>
        <g:DockPanel debugId="dlp" addStyleNames="{style.dockPanel}" spacing="10">
            <g:Dock direction="SOUTH" addStyleNames="{style.southDock}">
                <g:VerticalPanel addStyleNames="{style.southVPanel}">
                    <g:FlowPanel ui:field="southCardsPanel" addStyleNames="{style.southFlowPanel}" debugId="SOUTH"/>
                    <g:HorizontalPanel ui:field="southPanelHeader"
                                       addStyleNames="{style.handTitle} {style.southHPanel}"/>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="EAST" addStyleNames="{style.eastDock}">
                <g:VerticalPanel addStyleNames="{style.eastVPanel}">
                    <g:FlowPanel ui:field="eastCardsPanel" addStyleNames="{style.eastFlowPanel}" debugId="EAST"/>
                    <g:HorizontalPanel ui:field="eastPanelHeader" addStyleNames="{style.handTitle} {style.eastHPanel}"/>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="WEST" addStyleNames="{style.westDock}">
                <g:VerticalPanel addStyleNames="{style.westVPanel}">
                    <g:FlowPanel ui:field="westCardsPanel" addStyleNames="{style.westFlowPanel}" debugId="WEST"/>
                    <g:HorizontalPanel ui:field="westPanelHeader" addStyleNames="{style.handTitle} {style.westHPanel}"/>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="CENTER" addStyleNames="{style.centerDock}">
                <g:TabPanel ui:field="centerTabPanel" addStyleNames="{style.centerTabPanel}"
                            animationEnabled="false" width="100%" height="100%" debugId="centerTabPanel">
                    <g:Tab text="{constants.table}">
                        <g:FlowPanel ui:field="centerCardsPanel" debugId="centerCardsPanel"
                                     addStyleNames="{style.centerCardsPanel}"/>
                    </g:Tab>
                    <g:Tab text="{constants.widow}">
                        <g:SimplePanel ui:field="widowPanel" addStyleNames="{style.widowPanel}"/>
                    </g:Tab>
                </g:TabPanel>
            </g:Dock>
        </g:DockPanel>
    </g:VerticalPanel>
</ui:UiBinder>
