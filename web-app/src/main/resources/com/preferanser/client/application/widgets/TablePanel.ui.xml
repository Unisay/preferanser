<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.preferanser.client.application.widgets"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
    <ui:with field="constants" type="com.preferanser.client.application.i18n.PreferanserConstants"/>
    <ui:style>

        .verticalPanel {
            width: 1164px;
            margin: 0 auto;
        }

        .buttonsPanel {
            height: 60px;
        }

        .dockPanel {
            width: 100%;
            height: 100%;
        }

        .northDock, .eastDock, .southDock, .westDock, .centerDock {
            position: relative;
        }

        .northVPanel, .eastVPanel, .southVPanel, .westVPanel, .centerVPanel {
            position: relative;
            width: 100%;
        }

        .northHPanel, .southHPanel, .eastHPanel, .westHPanel, .centerHPanel {
            width: 100%;
            line-height: 20px;
            padding: 0 10px 0 10px;
            position: absolute;
            top: 0;
            left: 0;
            -webkit-border-top-left-radius: 7px;
            -webkit-border-top-right-radius: 7px;
            -moz-border-radius-topleft: 7px;
            -moz-border-radius-topright: 7px;
            border-top-left-radius: 7px;
            border-top-right-radius: 7px;
            background-color: rgba(0, 0, 0, 0.1);
            height: 20px;
            font-weight: bold;
            cursor: pointer;
            white-space: nowrap;
        }

        .northFlowPanel, .eastFlowPanel, .southFlowPanel, .westFlowPanel, .centerFlowPanel {
            width: 100%;
            position: relative;
            background-color: rgba(0, 0, 0, 0.1);
            border-radius: 7px;
        }

        .northDock, .southDock {
            width: 1164px;
        }

        .eastDock, .westDock {
            width: 297px;
        }

        .northFlowPanel, .southFlowPanel {
            height: 184px;
        }

        .eastFlowPanel, .westFlowPanel, .centerFlowPanel {
            height: 440px;
        }

        .eastVPanel, .westVPanel {
            width: 297px;
        }

        .centerVPanel {
            width: 550px;
        }

        .handTitle {
            font-size: small;
            text-shadow: 1px 1px 1px #222;
        }
    </ui:style>
    <g:VerticalPanel addStyleNames="{style.verticalPanel}" spacing="0">
        <g:HorizontalPanel ui:field="headerPanel" addStyleNames="{style.buttonsPanel}" spacing="10"/>
        <g:DockPanel debugId="dlp" addStyleNames="{style.dockPanel}" spacing="10">
            <g:Dock direction="NORTH" addStyleNames="{style.northDock}">
                <g:VerticalPanel addStyleNames="{style.northVPanel}">
                    <g:FlowPanel ui:field="northPanel" addStyleNames="{style.northFlowPanel}" debugId="NORTH"/>
                    <g:HorizontalPanel ui:field="northPanelHeader" addStyleNames="{style.handTitle} {style.northHPanel}"/>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="SOUTH" addStyleNames="{style.southDock}">
                <g:VerticalPanel addStyleNames="{style.southVPanel}">
                    <g:FlowPanel ui:field="southPanel" addStyleNames="{style.southFlowPanel}" debugId="SOUTH"/>
                    <g:HorizontalPanel ui:field="southPanelHeader" addStyleNames="{style.handTitle} {style.southHPanel}"/>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="EAST" addStyleNames="{style.eastDock}">
                <g:VerticalPanel addStyleNames="{style.eastVPanel}">
                    <g:FlowPanel ui:field="eastPanel" addStyleNames="{style.eastFlowPanel}" debugId="EAST"/>
                    <g:HorizontalPanel ui:field="eastPanelHeader" addStyleNames="{style.handTitle} {style.eastHPanel}"/>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="WEST" addStyleNames="{style.westDock}">
                <g:VerticalPanel addStyleNames="{style.westVPanel}">
                    <g:FlowPanel ui:field="westPanel" addStyleNames="{style.westFlowPanel}" debugId="WEST"/>
                    <g:HorizontalPanel ui:field="westPanelHeader" addStyleNames="{style.handTitle} {style.westHPanel}"/>
                </g:VerticalPanel>
            </g:Dock>
            <g:Dock direction="CENTER" addStyleNames="{style.centerDock}">
                <g:VerticalPanel addStyleNames="{style.centerVPanel}">
                    <g:FlowPanel ui:field="centerPanel" addStyleNames="{style.centerFlowPanel}" debugId="CENTER"/>
                    <g:HorizontalPanel ui:field="centerPanelHeader" addStyleNames="{style.handTitle} {style.centerHPanel}">
                        <p:TurnPointer ui:field="turnPointerNorth" turn="NORTH"/>
                        <p:TurnPointer ui:field="turnPointerEast" turn="EAST"/>
                        <p:TurnPointer ui:field="turnPointerSouth" turn="SOUTH"/>
                        <p:TurnPointer ui:field="turnPointerWest" turn="WEST"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:Dock>
        </g:DockPanel>
    </g:VerticalPanel>
</ui:UiBinder>
